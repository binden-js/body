{
  "name": "@kauai/body",
  "version": "1.0.1",
  "description": "Kauai body parser middleware",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.5.0",
    "npm": ">=7.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b2broker/body.git"
  },
  "keywords": [
    "HTTP",
    "kauai",
    "body"
  ],
  "author": "Sergey Bakulin <sbakulin@b2broker.net>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/b2broker/body/issues"
  },
  "homepage": "https://github.com/b2broker/body#readme",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "build:remove": "rm -rf dist",
    "ci:all": "npm ci && npm run prettier && npm run lint && npm run commitlint && npm test && npm publish --dry-run && npm run coverage",
    "commitlint": "commitlint --verbose --from=$( git rev-list --max-parents=0 $( git rev-parse --abbrev-ref HEAD ) )",
    "coverage": "c8 npm test",
    "docs:build": "typedoc",
    "install:clean": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .ts ./",
    "lint:fix": "npm run lint -- --fix",
    "postbuild": "prettier -c -w dist",
    "postcoverage": "c8 report --reporter=lcov",
    "postdocs:build": "prettier -c -w docs",
    "postpublish": "npm run build:remove",
    "prebuild": "npm run build:remove",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "prettier": "prettier -c .",
    "prettier:write": "npm run prettier -- --write",
    "preversion": "npm run docs:build",
    "release": "semantic-release",
    "test": "mocha 'dist/test/**/*.spec.js' --ui=tdd --full-trace --bail"
  },
  "devDependencies": {
    "@binden/commitlint-config": "^1.0.0",
    "@binden/semantic-release-config": "^1.1.0",
    "@binden/tsconfig": "^1.0.0",
    "@types/mocha": "^9.1.1",
    "c8": "^7.12.0",
    "eslint-config-b2broker-ts": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "node-fetch": "^3.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10"
  },
  "peerDependencies": {
    "kauai": "^1.0.6"
  }
}
