{
  "name": "@kauai/body",
  "version": "1.0.1",
  "description": "Kauai body parser middleware",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.5.0",
    "npm": ">=7.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b2broker/body.git"
  },
  "keywords": [
    "HTTP",
    "kauai",
    "body"
  ],
  "author": "Sergey Bakulin <sbakulin@b2broker.net>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/b2broker/body/issues"
  },
  "homepage": "https://github.com/b2broker/body#readme",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "build:remove": "rm -rf dist",
    "ci:all": "npm ci && npm run commitlint:all && npm run prettier && npm run lint && npm test && npm run publish:test && npm run coverage:ci",
    "commitlint": "commitlint --verbose",
    "commitlint:all": "npm run commitlint -- --from=$( git rev-list --max-parents=0 $( git rev-parse --abbrev-ref HEAD ) )",
    "coverage": "c8 --exclude 'dist/test/' npm test && c8 report --reporter=lcov",
    "coverage:ci": "npm run build && npm run coverage && npm run build:remove",
    "docs:build": "typedoc",
    "install:clean": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .ts ./",
    "lint:fix": "npm run lint -- --fix",
    "postdocs:build": "prettier -c -w docs",
    "postpublish": "npm run build:remove",
    "prebuild": "npm run build:remove",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run prettier:write",
    "pretest": "npm run build",
    "prettier": "prettier -c .",
    "prettier:write": "npm run prettier -- --write",
    "publish:test": "npm publish --dry-run",
    "release": "semantic-release",
    "test": "mocha 'dist/test/**/*.spec.js' --ui=tdd --full-trace --bail"
  },
  "devDependencies": {
    "@binden/tsconfig": "^1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/mocha": "^9.0.0",
    "c8": "^7.10.0",
    "commitlint-config-b2broker": "^1.0.6",
    "eslint-config-b2broker-ts": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "node-fetch": "^3.1.0",
    "prettier": "^2.5.1",
    "semantic-release": "^18.0.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10"
  },
  "peerDependencies": {
    "kauai": "^1.0.6"
  }
}
